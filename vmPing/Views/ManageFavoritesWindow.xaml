<Window x:Class="vmPing.Views.ManageFavoritesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vmPing.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#F4F4F4"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        SourceInitialized="Window_SourceInitialized"
        Title="vmPing - Favorites"
        Height="475" Width="550"
        MinHeight="225" MinWidth="300">

    <Grid Margin="9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Manage Favorites"
                   Style="{DynamicResource ResourceKey=OptionHeaderTextStyle}"
                   />

        <ListBox Grid.Row="1"
                 Name="Favorites"
                 SelectionMode="Single"
                 Margin="0"/>

        <Border Grid.Row="2" Grid.RowSpan="2" Background="#bbb" BorderThickness="1,0,1,1" BorderBrush="#acacac">
            <Grid>
                <Button Name="Remove"
                        Click="Remove_Click"
                        Margin="9"
                        Width="120"
                        Style="{DynamicResource ButtonSecondaryStyle}"
                        HorizontalAlignment="Right"
                        Content="Remove">
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
